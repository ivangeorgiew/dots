-R
--fields=+l

--exclude=min
--exclude=coverage
--exclude=build
--exclude=dist
--exclude=lib
--exclude=vendor
--exclude=tags
--exclude=node_modules
--exclude=bower_components
--exclude=test
--exclude=tests
--exclude=.git
--exclude=\*.min.\*
--exclude=\*.map
--exclude=\*.swp
--exclude=\*.bak
--exclude=\*.css
--exclude=\*.json
--exclude=\*.bundle.\*

--langdef=javascript
--langmap=javascript:.js.jsx
--javascript-kinds=c
--regex-javascript=/^[ \t]*export[ \t]?(var|let|const|function|class)[ \t]([a-zA-Z0-9_$]+)/\2/c,custom/
--regex-javascript=/^[ \t]*export[ \t]function?(\* | \* | \*)([a-zA-Z0-9_$]+)/\2/c,customk/
--regex-javascript=/^[ \t]*export[ \t]default[\t]?(function |class | )([a-zA-Z0-9_$]+)/\2/c,custom/
