# Font for window titles. Will also be used by the bar unless a different font is used in the bar {} block below.
font pango:Cousine for Powerline 13

for_window [class="^.*"] border pixel 3
# gaps inner 5
# gaps outer 5
workspace_layout default #default|stacking|tabbed
popup_during_fullscreen smart #smart|ignore|leave_fullscreen
focus_follows_mouse yes

#window title and edge bar
#class                  border  backgr  text    indicator child_border
client.focused          #83a598 #458588 #ffffff #2e9ef4   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.urgent           #fe8019 #fb4834 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

exec --no-startup-id feh --bg-scale ~/dotfiles/wallpaper.jpg
exec --no-startup-id i3lock-fancy && sleep 1
exec_always --no-startup-id xautolock -time 5 -locker "i3lock-fancy"
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec --no-startup-id dunst
exec --no-startup-id termite
exec --no-startup-id google-chrome-stable

set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $audioId 0

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec termite
bindsym $mod+i exec --no-startup-id google-chrome-stable --incognito
bindsym $mod+space exec --no-startup-id rofi -show run

# Audio shortcuts
bindsym $mod+F9 exec --no-startup-id pactl set-sink-mute $audioId toggle # mute sound
bindsym $mod+F10 exec --no-startup-id pactl set-sink-volume $audioId -5% #decrease sound volume
bindsym $mod+F11 exec --no-startup-id pactl set-sink-volume $audioId +5% #increase sound volume

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# change split orientation
bindsym $mod+semicolon split toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

#lock
bindsym $mod+Shift+e exec --no-startup-id i3lock-fancy && sleep 1

#take screenshot of the currently focused screen
bindsym $mod+F1 exec import -window "$(xdotool getwindowfocus -f)" /tmp/$(date +%F_%H%M%S_%N).png

#invisible bindings
# bindsym $mod+s move scratchpad
# bindsym $mod+Shift+s scratchpad show

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:term"
set $ws2 "2:chrome"
set $ws3 "3:mult"
set $ws4 "4:virtual"
set $ws5 "5:etc"

# switch to workspace
bindsym Ctrl+8 workspace $ws1
bindsym Ctrl+9 workspace $ws2
bindsym Ctrl+0 workspace $ws3
bindsym Ctrl+minus workspace $ws4
bindsym Ctrl+equal workspace $ws5

# move focused container to workspace
bindsym $mod+8 move container to workspace $ws1
bindsym $mod+9 move container to workspace $ws2
bindsym $mod+0 move container to workspace $ws3
bindsym $mod+minus move container to workspace $ws4
bindsym $mod+equal move container to workspace $ws5

#assign windows to different workspaces
assign [class="Termite"] $ws1
assign [class="Google-chrome"] $ws2
for_window [class="Spotify"] move to workspace $ws3
assign [class="Skype"] $ws3
assign [class="Wfica"] $ws4

